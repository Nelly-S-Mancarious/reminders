<p id="notice"><%= notice %></p>

<h1>Reminders</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Month day</th>
      <th>Day time</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.title %></td>
        <td><%= reminder.description %></td>
        <td>
          <% days = reminder.month_day %>
          <% days = ((days = days * -1).to_s + " days From End of Month ") if days < 0 %>
          <%= days %>
        </td>
        <td><%= reminder.day_time.strftime("%H:%M:%S %z") %></td>
        <td><%= reminder.user.email %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

